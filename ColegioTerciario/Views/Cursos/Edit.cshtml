                    { value: "Ausente", text: "Ausente" },
                ]
            });

            $('.date').editable({
                url: '/Cursos/SetearFecha',
                type: 'combodate',
                mode: 'popup',
                pk: @Model.ID,
                viewformat: "DD/MM/YYYY",
                locale: "es",
                language: "es"
            });
        });
    </script>
}