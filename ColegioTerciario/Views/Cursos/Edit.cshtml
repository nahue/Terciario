@model ColegioTerciario.DAL.Models.Materia_x_Curso
@{
    ViewBag.Title = "Edit";
}

<h2>Curso @Model.MATERIA_X_CURSO_CURSO_NOMBRE - @Model.MATERIA_X_CURSO_CICLO.CICLO_NOMBRE</h2>
<h3>@Model.MATERIA_X_CURSO_CARRERA.CARRERA_NOMBRE</h3>
<h4>@Model.MATERIA_X_CURSO_MATERIA.MATERIA_NOMBRE</h4>

<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#agregarAlumnosModal">
    Agregar alumnos al curso
</button>

<table class="table alumnos-curso">
    <thead>
        <tr>
            <th>Fechas: </th>
            <td><a href="#" data-name="P1_FECHA" class="date">@String.Format("{0:dd/MM/yyyy}",Model.MATERIA_X_CURSO_P1_FECHA)</a></td>
            <td><a href="#" data-name="R1_FECHA" class="date">@String.Format("{0:dd/MM/yyyy}", Model.MATERIA_X_CURSO_R1_FECHA)</a></td>
            <td><a href="#" data-name="P2_FECHA" class="date">@String.Format("{0:dd/MM/yyyy}", Model.MATERIA_X_CURSO_P2_FECHA)</a></td>
            <td><a href="#" data-name="R2_FECHA" class="date">@String.Format("{0:dd/MM/yyyy}", Model.MATERIA_X_CURSO_R2_FECHA)</a></td>
        </tr>
        <tr>
            <th>Alumno</th>
            <th>P1</th>
            <th>R1</th>
            <th>P2</th>
            <th>R2</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ColegioTerciario.DAL.Models.Cursada cursada in ViewBag.alumnos)
        {
            <tr>
                <th>
                    <ul>
                        <li>@cursada.CURSADA_ALUMNO.PERSONA_APELLIDO, @cursada.CURSADA_ALUMNO.PERSONA_NOMBRE</li>
                        <li>@cursada.CURSADA_ALUMNO.PERSONA_DOCUMENTO_NUMERO</li>
                    </ul>
                </th>
                @{ var cursadaId = cursada.ID; }
                <td>
                    
                    <a href="#" class="xEditable" data-type="select" data-pk="@cursadaId" data-name="P1" data-value="0">
                        @(cursada.CURSADA_NOTA_P1 == null ? "Inserte la nota" : cursada.CURSADA_NOTA_P1)
                    </a>         
                </td>
                <td>

                    <a href="#" class="xEditable" data-type="select" data-pk="@cursadaId" data-name="R1" data-value="0">
                        @(cursada.CURSADA_NOTA_R1 == null ? "Inserte la nota" : cursada.CURSADA_NOTA_R1)
                    </a>
                </td>
                <td>

                    <a href="#" class="xEditable" data-type="select" data-pk="@cursadaId" data-name="P2" data-value="0">
                        @(cursada.CURSADA_NOTA_P2 == null ? "Inserte la nota" : cursada.CURSADA_NOTA_P2)
                    </a>
                </td>
                <td>

                    <a href="#" class="xEditable" data-type="select" data-pk="@cursadaId" data-name="R2" data-value="0">
                        @(cursada.CURSADA_NOTA_R2 == null ? "Inserte la nota" : cursada.CURSADA_NOTA_R2)
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

