@using System.Collections
@using ColegioTerciario.DAL.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.error != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
        <strong>Error!</strong> @ViewBag.error.
    </div>
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h2>Agregar Cursos</h2>
            </div>
            <div class="card-body card-padding">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.Label("SEDE", "Sedes", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("SEDE", ViewBag.SEDES as SelectList, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("CICLO", "Ciclos", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("CICLO", ViewBag.CICLOS as SelectList, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("CARRERA", "Carreras", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <select class="form-control" id="CARRERA" name="Carrera">
                                    @foreach (var carrera in ViewBag.CARRERAS)
                                    {
                                        <option value="@carrera.ID">@carrera.CARRERA_NOMBRE_CORTO - @carrera.CARRERA_RESOLUCION_PLAN</option>
                                    }
                                        
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("AÑO", "AÑO", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <table class="table borderless">
                                    <tr>
                                        <td>@Html.RadioButton("AÑO", 1) 1</td>
                                        <td>@Html.RadioButton("AÑO", 2) 2</td>
                                        <td>@Html.RadioButton("AÑO", 3) 3</td>
                                    </tr>
                                </table>



                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("NROS", "Comisión", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <table class="table borderless">
                                    <tr>
                                        <td>@Html.CheckBox("NROS[0]", false, new { value = "A" }) A</td>
                                        <td>@Html.CheckBox("NROS[1]", false, new { value = "B" }) B</td>
                                        <td>@Html.CheckBox("NROS[2]", false, new { value = "C" }) C</td>
                                        <td>@Html.CheckBox("NROS[3]", false, new { value = "D" }) D</td>
                                    </tr>
                                </table>



                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.Label("TURNO", "Turno", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <select class="form-control" id="TURNO" name="Turno">
                                    <option value="MAÑANA">Mañana</option>
                                    <option value="TARDE">Tarde</option>
                                    <option value="NOCHE">Noche</option>
                                </select>
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


